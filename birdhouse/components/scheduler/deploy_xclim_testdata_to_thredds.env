# Source this file in env.local before sourcing deploy_data_job.env.
# This will configure deploy_data_job.env.

print_xclim_cron_config() {
    DEPLOY_DATA_JOB_SCHEDULE="7,37 * * * *"  # UTC
    DEPLOY_DATA_JOB_JOB_NAME="deploy_xclim_testdata_to_thredds"
    DEPLOY_DATA_JOB_CONFIG="${COMPOSE_DIR}/deployment/deploy-data-xclim-testdata-to-thredds.yml"
    DEPLOY_DATA_JOB_JOB_DESCRIPTION="Auto-deploy Xclim testdata to Thredds for Finch and Xclim tutorial notebooks."

    . "${COMPOSE_DIR}/components/scheduler/deploy_data_job.env"
    print_cron_config
}

export BIRDHOUSE_SCHEDULER_DEPLOY_XCLIM_TEST_DATA="$(print_xclim_cron_config)"
