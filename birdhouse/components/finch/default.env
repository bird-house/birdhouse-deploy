# All env in this default.env can be overridden by env.local.

# All env in this default.env must NOT depend on any other env.  If they do, they
# must use single quotes to avoid early expansion before overrides in env.local
# are applied and must be added to the list of DELAYED_EVAL.

export FINCH_VERSION=0.9.2
export FINCH_DOCKER=birdhouse/finch
export FINCH_IMAGE='${FINCH_DOCKER}:version-${FINCH_VERSION}'
export FINCH_IMAGE_URI='registry.hub.docker.com/${FINCH_IMAGE}'

# This tells the postgres service to create a database on startup
export POSTGRES_DATABASES_TO_CREATE="
  $POSTGRES_DATABASES_TO_CREATE
  finch
"

# registration of WPS providers
export WEAVER_WPS_PROVIDERS="
  $WEAVER_WPS_PROVIDERS
  finch
"

# add any component that this component requires to run
COMPONENT_DEPENDENCIES="
  ./components/wps_outputs-volume
  ./components/postgres
"

export DELAYED_EVAL="
  $DELAYED_EVAL
  FINCH_IMAGE
  FINCH_IMAGE_URI
"

OPTIONAL_VARS="
  $OPTIONAL_VARS
  \$FINCH_VERSION
  \$FINCH_DOCKER
  \$FINCH_IMAGE
  \$FINCH_IMAGE_URI
"
