export FLYINGPIGEON_VERSION=1.6

# This tells the postgres service to create a database on startup
export POSTGRES_DATABASES_TO_CREATE="
  $POSTGRES_DATABASES_TO_CREATE
  flyingpigeon
"

# registration of WPS providers
# the BIRDHOUSE_DEFAULT_NETWORK is used as a domain suffix so that the URI complies with RFC 1035 (required by weaver)
export WEAVER_WPS_PROVIDERS="
  $WEAVER_WPS_PROVIDERS
  flyingpigeon:http://flyingpigeon.\${BIRDHOUSE_DEFAULT_NETWORK}:8093/wps
"

# add any component that this component requires to run
COMPONENT_DEPENDENCIES="
  ./config/postgres
  ./config/wps_outputs-volume
"

OPTIONAL_VARS="
  $OPTIONAL_VARS
  \$FLYINGPIGEON_VERSION
"
