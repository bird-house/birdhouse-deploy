export LOKI_DOCKER=grafana/loki
export LOKI_VERSION=2.9.2
export LOKI_IMAGE='${LOKI_DOCKER}:${LOKI_VERSION}'

export LOKI_PROMTAIL_DOCKER=grafana/promtail
export LOKI_PROMTAIL_VERSION=2.9.2
export LOKI_PROMTAIL_IMAGE='${LOKI_PROMTAIL_DOCKER}:${LOKI_PROMTAIL_VERSION}'

export LOKI_PORT=3100
export LOKI_PROMTAIL_PORT=9080
export LOKI_PROMTAIL_LOG_DIR='/logs'

OPTIONAL_VARS="
    $OPTIONAL_VARS
    \$LOKI_VARLOGS_PIPELINE_STAGES
"

VARS="
    $VARS
    \$LOKI_PORT
    \$LOKI_PROMTAIL_PORT
    \$LOKI_PROMTAIL_LOG_DIR
"

export DELAYED_EVAL="
  $DELAYED_EVAL
  LOKI_IMAGE
  LOKI_PROMTAIL_IMAGE
"
