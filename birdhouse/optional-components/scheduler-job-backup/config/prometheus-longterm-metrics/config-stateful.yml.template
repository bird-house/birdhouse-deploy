- name: ${SCHEDULER_JOB_BACKUP_PREFIX}prometheus-longterm-metrics
  comment: Backup monitoring data and session files from the monitoring prometheus-longterm-metrics service
  schedule: '${SCHEDULER_JOB_BACKUP_EXTRACT_FREQUENCY}'
  command: "-c 'snapshot=\"/prometheus/snapshots/$(curl -X POST http://prometheus-longterm-metrics:9090/prometheus-longterm-metrics/api/v1/admin/tsdb/snapshot | grep -o \"[[:digit:]]\\{8\\}T[[:digit:]]\\{1,\\}Z-[[:alnum:]]\\{1,\\}\")\"  ; rm -rf /scheduler-backup/prometheus-longterm-metrics; cp -r \"${snapshot}\" /scheduler-backup/prometheus-longterm-metrics; rm -rf \"${snapshot}\"'"
  dockerargs: >-
    --name ${SCHEDULER_JOB_BACKUP_PREFIX}prometheus-longterm-metrics_prometheus --rm
    --entrypoint=sh
    --user=root
    --volume prometheus_longterm_persistence:/prometheus 
    --volume ${SCHEDULER_JOB_BACKUP_VOLUME}:/scheduler-backup
    --network "${COMPOSE_PROJECT_NAME}_default"
  image: '${SCHEDULER_JOB_BACKUP_CURL_IMAGE}'
