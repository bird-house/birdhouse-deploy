- name: ${SCHEDULER_JOB_BACKUP_PREFIX}cowbird
  comment: Backup database from the cowbird service
  schedule: '${SCHEDULER_JOB_BACKUP_EXTRACT_FREQUENCY}'
  command: "${SCHEDULER_JOB_BIRDHOUSE_EXE_LOC} compose run --rm -v ${SCHEDULER_JOB_BACKUP_VOLUME}:/scheduler-backup cowbird-mongodb sh -c 'mongodump --host=cowbird-mongodb --out=/scheduler-backup/cowbird/'"
  dockerargs: >-
    --name ${SCHEDULER_JOB_BACKUP_PREFIX}cowbird ${SCHEDULER_JOB_BACKUP_COMMON_ARGS}
  image: '${SCHEDULER_JOB_BACKUP_DOCKER_IMAGE}'
